{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsxImportSource": "@emotion/react",
    "composite": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "components/src/*": [
        "./src/*"
      ],
      "components/types/*": [
        "./types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
